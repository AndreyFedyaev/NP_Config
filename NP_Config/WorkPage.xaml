<Page x:Class="NP_Config.WorkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NP_Config"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="900"
      Title="WorkPage">

    <Grid Style="{DynamicResource GridStyle_Type2}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" Margin="8">
            <Border Style="{DynamicResource BorderStyle_Type1}" UseLayoutRounding="True">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="20" Opacity="0.7"/>
                </Border.Effect>
                <Grid>
                    
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1" Margin="8">
            <Border Style="{DynamicResource BorderStyle_Type1}" UseLayoutRounding="True">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="20" Opacity="0.7"/>
                </Border.Effect>
                <Grid>

                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="2" Margin="8">
            <Border Style="{DynamicResource BorderStyle_Type1}" UseLayoutRounding="True">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="20" Opacity="0.7"/>
                </Border.Effect>
                <Grid>
                    <Button Width="50" Height="20" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0" Style="{DynamicResource ButtonStyle_Type1}"/>


                    <TextBlock Text="DDDDDD" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,70,0,0" Style="{DynamicResource TextBlockStyle_Type3}"/>

                    <TextBox PreviewTextInput="Cheking_for_numbers" Width="100" Height="63" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,100,0,0" Style="{DynamicResource TextBoxStyle_Type1}"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
