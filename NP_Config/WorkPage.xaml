                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <StackPanel x:Name="NP_Channel1_StPanel"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <StackPanel x:Name="NP_Channel2_StPanel"/>
                                </Grid>
