<Page x:Class="NP_Config.WorkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NP_Config"
      mc:Ignorable="d" 
      d:DesignHeight="440" d:DesignWidth="900"
      Title="WorkPage">

    <Grid Style="{DynamicResource GridStyle_Type2}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0" Margin="8">
            <Border Style="{DynamicResource BorderStyle_Type1}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="20" Opacity="0.7"/>
                </Border.Effect>
                <Grid>
                    
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1" Margin="8">
            <Border Style="{DynamicResource BorderStyle_Type1}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="20" Opacity="0.7"/>
                </Border.Effect>
                <Grid>

                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="2" Margin="8">
            <Border Style="{DynamicResource BorderStyle_Type1}">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="20" Opacity="0.7"/>
                </Border.Effect>
                <Grid>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
